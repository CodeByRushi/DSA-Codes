import java.util.Scanner;
import java.lang.Math;

public class Sample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int lastbit,i=0;
        long ans=0;
        while(n != 0)
        {
            lastbit = n & 1;
            ans = lastbit * (long)(Math.pow(2,i))+ ans;
            n>>=1;
            i++;
        }
        System.out.println(ans);
	
	}
}
