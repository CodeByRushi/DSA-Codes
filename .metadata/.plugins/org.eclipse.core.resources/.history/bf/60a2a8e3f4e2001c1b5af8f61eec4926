import java.util.Scanner;

public class Half_Diamond {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int row=1,col;
		n=n+1;
		while(row <= n)
		{
			System.out.print("*");
			col=1;
			while(col <= (row-1))
			{
				System.out.print(col);
				col++;
			}
			col-=2;
			while(col>=1)
			{
				System.out.print(col);
				col--;
			}
			if(row != 0)
			{
				System.out.print("*");
			}
			System.out.println();
			row++;
		}
	}

}
